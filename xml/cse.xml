      </Facet>
      <Facet>
        <FacetItem title="Solutions">
           <Label name="solutions" mode="FILTER" >
              <Rewrite>solution OR solutions</Rewrite>
           </Label>
        </FacetItem>
      </Facet>
      <Facet>
        <FacetItem title="Reviews">
           <Label name="reviews" mode="FILTER" >
              <Rewrite>review OR reviews</Rewrite>
           </Label>
        </FacetItem>
      </Facet>
      <!-- Labels indicating how the engine will handle a site -->
      <BackgroundLabels>
