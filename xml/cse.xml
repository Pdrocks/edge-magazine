        <FacetItem title="Environment">
           <Label name="environment" mode="FILTER">
              <Rewrite>environment OR environmental</Rewrite>
           </Label>
        </FacetItem>
      </Facet>
      <Facet>
        <FaceItem title="Sustainable Living">
           <Label name="sustainability" mode="FILTER">
